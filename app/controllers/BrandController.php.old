<?php

require __DIR__ . '/../utils/Request.php';
require __DIR__ . '/../utils/Validator.php';
require __DIR__ . '/../models/Brand.php';
require __DIR__ . '/../utils/Protection.php';

try {
    $request = new Request();
    $brand = new Brand();
    $permissions = $brand->getSession()->get('access');

    if ($permissions === null || !is_array($permissions)) {
        echo json_encode([
            'success' => false,
            'message' => 'A ocurrido un error, por favor refresque la pa패gina.'
        ]);

        exit;
    }

    $protection = new Protection($permissions);

    if (!$protection->has('1')) {
        echo json_encode([
            'success' => false,
            'message' => 'Acceso denegado.'
        ]);

        exit;
    }

    $request->addHeadersJSON();

    if ($request->isPost()) {
        $data = $request->getData();

        $validator = new Validator($data);

        $errors = $validator->validate([
            'nombre_marca' => 'required'
        ]);

        if (count($errors) > 0) {
            echo json_encode([
                'success' => false,
                'message' => 'Error de validacio패n',
                'errors' => $errors
            ]);

            exit;
        }

        $response = $brand->createBrand($data);

        if ($response) {
            echo json_encode([
                'success' => true,
                'message' => 'Marca creada correctamente'
            ]);

            exit;
        }

        echo json_encode([
            'success' => false,
            'message' => 'Al parecer no se ha podido crear la marca.',
        ]);

        exit;
    }

    if ($request->isGet()) {
        $brands = $brand->getBrands();

        echo json_encode($brands);

        exit;
    }

    if ($request->isPut()) {
        $data = $request->getData();

        $validator = new Validator($data);

        $errors = $validator->validate([
            'codigo' => 'required',
            'nombre_marca' => 'required'
        ]);

        if (count($errors) > 0) {
            echo json_encode([
                'success' => false,
                'message' => 'Error de validacio패n',
                'errors' => $errors
            ]);

            exit;
        }

        $response = $brand->updateBrand($data);

        if ($response) {
            echo json_encode([
                'success' => true,
                'message' => 'Marca actualizada correctamente'
            ]);

            exit;
        }

        echo json_encode([
            'success' => false,
            'message' => 'Al parecer no se ha podido actualizar la marca.',
        ]);

        exit;
    }

    if ($request->isDelete()) {
        $data = $request->getData();

        $validator = new Validator($data);

        $errors = $validator->validate([
            'codigo' => 'required'
        ]);

        if (count($errors) > 0) {
            echo json_encode([
                'success' => false,
                'message' => 'Error de validacio패n',
                'errors' => $errors
            ]);

            exit;
        }

        $response = $brand->deleteBrand($data);

        if ($response) {
            echo json_encode([
                'success' => true,
                'message' => 'Marca eliminada correctamente'
            ]);

            exit;
        }

        echo json_encode([
            'success' => false,
            'message' => 'Al parecer no se ha podido eliminar la marca.',
        ]);

        exit;
    }
} catch (\Throwable $th) {
    echo json_encode([
        'success' => false,
        'message' => $th->getMessage(),
    ]);

    exit;
}
